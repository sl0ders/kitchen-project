{% extends 'admin/base.html.twig' %}
{% trans_default_domain 'kitchen-project' %}

{% block title %}{{ "title.recipe.admin.show"| trans({"object" : recipe.title}) }}{% endblock %}

{% block body %}
    <h1 class="text-center mt-5">{{ "title.recipe.admin.show"| trans({"object" : recipe.title}) }}</h1>

    <table class="table" id="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recipe.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ recipe.title }}</td>
            </tr>
            <tr>
                <th>BackgroundFilename</th>
                <td>{{ recipe.backgroundFilename }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ recipe.createdAt ? recipe.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdateAt</th>
                <td>{{ recipe.updateAt ? recipe.updateAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Resume</th>
                <td>{{ recipe.resume }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{{ recipe.enabled ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>PathBackground</th>
                <td>{{ recipe.pathBackground }}</td>
            </tr>
            <tr>
                <th>IsEnabled</th>
                <td>{{ recipe.isEnabled ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_recipe_index') }}">back to list</a>

    <a href="{{ path('admin_recipe_edit', {'id': recipe.id}) }}"><span class="fa fa-edit text-warning fa-lg"></span></a>

    {{ include('admin/recipe/_delete_form.html.twig') }}
{% endblock %}
