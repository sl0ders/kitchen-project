{% extends 'admin/base.html.twig' %}
{% trans_default_domain 'kitchen-project' %}

{% block title %}{{ "title.picture.admin.show"| trans }}{% endblock %}

{% block body %}
    <h1 class="text-center mt-5">{{ "title.picture.admin.show"| trans }}</h1>

    <table class="table" id="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ picture.id }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ picture.url }}</td>
            </tr>
            <tr>
                <th>UpdateAt</th>
                <td>{{ picture.updateAt ? picture.updateAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Extention</th>
                <td>{{ picture.extention }}</td>
            </tr>
            <tr>
                <th>FileName</th>
                <td>{{ picture.fileName }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_picture_index') }}">back to list</a>

    <a href="{{ path('admin_picture_edit', {'id': picture.id}) }}"><span class="fa fa-edit text-warning fa-lg"></span></a>

    {{ include('admin/picture/_delete_form.html.twig') }}
{% endblock %}
