{% extends 'admin/base.html.twig' %}
{% trans_default_domain 'kitchen-project' %}

{% block title %}{{ "title.picture.admin.index"| trans }}{% endblock %}

{% block body %}
    <h1 class="text-center mt-5">{{ "title.picture.admin.index"| trans }}</h1>

    <table class="table" id="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Url</th>
                <th>UpdateAt</th>
                <th>Extention</th>
                <th>FileName</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for picture in pictures %}
            <tr>
                <td>{{ picture.id }}</td>
                <td>{{ picture.url }}</td>
                <td>{{ picture.updateAt ? picture.updateAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ picture.extention }}</td>
                <td>{{ picture.fileName }}</td>
                <td>
                    <a href="{{ path('admin_picture_show', {'id': picture.id}) }}"><span class="fa fa-eye text-primary fa-lg"></span></a>
                    <a href="{{ path('admin_picture_edit', {'id': picture.id}) }}"><span class="fa fa-edit text-warning fa-lg"></span></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">{{ 'text.noRecordsFound' | trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_picture_new') }}" class="btn btn-success btn-lg text-white" style="width:50px; height:50px"><span class="fa fa-plus text-success fa-lg"></span></a>
{% endblock %}
