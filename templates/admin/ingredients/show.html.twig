{% extends 'admin/base.html.twig' %}
{% trans_default_domain 'kitchen-project' %}

{% block title %}{{ "title.ingredient.admin.show"| trans({"%object%" : ingredient.name})  }}{% endblock %}

{% block body %}
    <h1 class="text-center mt-5">{{ "title.ingredient.admin.show"| trans({"%object%" : ingredient.name})  }}</h1>

    <table class="table" id="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ingredient.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ ingredient.name }}</td>
            </tr>
            <tr>
                <th>Unity</th>
                <td>{{ ingredient.unity }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ ingredient.quantity }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_ingredients_index') }}">back to list</a>

    <a href="{{ path('admin_ingredients_edit', {'id': ingredient.id}) }}"><span class="fa fa-edit text-warning fa-lg"></span></a>

    {{ include('admin/ingredients/_delete_form.html.twig') }}
{% endblock %}
