{% extends 'admin/base.html.twig' %}
{% trans_default_domain 'kitchen-project' %}

{% block title %}{{ "title.comment.admin.show"| trans({"%object%" : comment.id}) }}{% endblock %}

{% block body %}
    <h1 class="text-center mt-5">{{ "title.comment.admin.show"| trans({"%object%" : comment.id}) }}</h1>

    <table class="table" id="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ comment.content }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{{ comment.enabled ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsParticipatory</th>
                <td>{{ comment.IsParticipatory ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_comment_index') }}">back to list</a>

    <a href="{{ path('admin_comment_edit', {'id': comment.id}) }}"><span class="fa fa-edit text-warning fa-lg"></span></a>

    {{ include('admin/comment/_delete_form.html.twig') }}
{% endblock %}
