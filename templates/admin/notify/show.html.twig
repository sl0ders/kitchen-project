{% extends 'admin/base.html.twig' %}
{% trans_default_domain 'kitchen-project' %}

{% block title %}{{ 'title.notify.admin.show'| trans({"%object%" : notify.id}) }}{% endblock %}

{% block body %}
    <h1 class="text-center mt-5">{{ 'title.notify.admin.show'| trans({"%object%" : notify.id}) }}</h1>

    <table class="table" id="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ notify.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ notify.content }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{{ notify.enabled ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Reason</th>
                <td>{{ notify.reason }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_notify_index') }}">back to list</a>

    <a href="{{ path('admin_notify_edit', {'id': notify.id}) }}"><span class="fa fa-edit text-warning fa-lg"></span></a>

    {{ include('admin/notify/_delete_form.html.twig') }}
{% endblock %}
